<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.Tokopaerbe" parent="Theme.Material3.Light">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splashscreen2</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">?attr/colorSurfaceContainerLowest</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="dialogFragment">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ChipInput" parent="Widget.Material3.Chip.Filter" />

    <style name="styleInputChip" parent="Widget.Material3.Chip.Input">
        <item name="chipIconTint">#1D192B</item>
        <item name="chipBackgroundColor">#E8DEF8</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>


</resources>